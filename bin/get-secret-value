#!/usr/bin/env sh

set -eu

BINARIES_LOCATION="$(dirname $0)"
BINARY_BASENAME="$(basename $0)"

case "$(uname -s)" in
  Linux*)
    exec "${BINARIES_LOCATION}"/"${BINARY_BASENAME}"_linux_amd64
    ;;
  Darwin*)
    exec "${BINARIES_LOCATION}"/"${BINARY_BASENAME}"_darwin_amd64
    ;;
  *)
    echo "Can't find binary for $(uname -s)"
    exit 1
    ;;
esac
